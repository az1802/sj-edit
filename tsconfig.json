{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration":true,
    "declarationDir":"./lib/ds",
    "outDir": "./lib",
    // "traceResolution":true,//打印模块的查找路径
    "types": [
      "webpack-env",
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      // "*": ["types/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts",
    "shims-vue.d.ts"

  ],
  "exclude": [
    "node_modules",
  ]
}